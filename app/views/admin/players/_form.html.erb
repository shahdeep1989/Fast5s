<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">
      <div class="box-header"> 
      <% text = @admin_player.new_record? ? "New Player" : "Edit Player" %>
      <% btn_text = @admin_player.new_record? ? "Create New Player" : "Update Player" %>
          <h3 class="box-title"><%=text %></h3>
        <h3 class="box-title" style="float: right;"><%if request.url.include?("edit")%>  <%= link_to "Show", admin_player_path(@admin_player), class: "label label-primary" %><% end  %>  <%= link_to "Back", admin_players_path, class: "label label-primary" %></h3>

          <% path = @admin_player.new_record? ? admin_players_path : admin_player_path %>
          <%= form_for(@admin_player ,:url => path,:html => {:id => "newPlayerForm"}, :class => "bootstrap-validator-form") do |f| %>

            <div class="box-body col-md-6">
                <div class="form-group">
                  <label><%= f.label :email%></label>
                  <%= f.email_field :email, :class => "form-control" %>
                </div>
                <!-- <div class="form-group">
                  <label><%#= f.label :game_type %></label>
                  <%#= f.number_field :game_type , :class => "form-control"  %>
                </div> -->
                <div class="form-group">
                  <label><%= f.label "First Name" %></label>
                  <%= f.text_field :first_name , :class => "form-control"  %>
                </div>
                <!-- <div class="form-group">
                  <label><%#= f.label :total_number_in_ticket %></label>
                  <%#= f.number_field :total_number_in_ticket , :class => "form-control"  %>
                </div> -->
                <div class="form-group">
                  <label><%= f.label "Last Name" %></label>
                  <%= f.text_field :last_name , :class => "form-control"  %>
                </div>
                <div class="form-group">
                  <label><%= f.label "Password" %></label>
                  <%= f.password_field :password , :class => "form-control"  %>
                </div> 
                <div class="form-group">
                  <label><%= f.label "Password Confirmation" %></label>
                  <%= f.password_field :password_confirmation , :class => "form-control"  %>
                </div>                                     
                <div class="box-footer col-md-6">
                  <%= f.submit class: "btn btn-primary" ,:value => "#{btn_text}" %>
                </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>