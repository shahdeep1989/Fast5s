<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">
      <div class="box-header">
        <% if @game.new_record? %>
          <h3 class="box-title">New Game</h3>
        <% else %>
          <h3 class="box-title">Edit Game</h3>
        <% end %>
        <h3 class="box-title" style="float: right;"><%if request.url.include?("edit")%>  <%= link_to "Show", admin_game_path(@game), class: "label label-primary" %><% end  %>  <%= link_to "Back", admin_games_path, class: "label label-primary" %></h3>
          <%=  nested_form_for([:admin,@game], :html => {:id => "newPatientForm" ,multipart: true }, :class => "bootstrap-validator-form") do |f| %>
            <div class="box-body col-md-6">
                <div class="form-group">
                  <label><%= f.label :name%></label>
                  <%= f.text_field :name, :class => "form-control" %>
                </div>
     
                <div class="form-group">
                  <label><%= f.label "Interval In Seconds" %></label>
                  <%= f.number_field :interval_sec , :class => "form-control"  %>
                </div>
         
                <div class="form-group">
                  <label><%= f.label "Maximum Number Of Players" %></label>
                  <%= f.number_field :num_of_player , :class => "form-control"  %>
                </div>    

                <div class="form-group">
                  <label><%= f.label "Game Image" %></label>
                  <%= f.file_field :game_image , :class => "form-control"  %>
                </div>    

                <div class="form-group">               
                  <%= f.fields_for :winning_parts  %>
                  <%= f.link_to_add "Add a Winning Parts", :winning_parts %></p>
                </div>    


                <div class="box-footer col-md-6">
                  <%= f.submit class: "btn btn-primary" %>
                </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>