
<section class="content-header">
  <h1>
    Games
    <small>List</small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to "<i class='fa fa-wheelchair'></i> Game".html_safe , admin_games_path  %></li>
    <li class="active">List</li>
  </ol>
  <br />
  <%#= render 'shared/error_messages' %>
</section>

<section class="content">
<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">

      <div class="box-header">
        <h3 class="box-title">
           <%= link_to 'New Game', new_admin_game_path, class: "label label-primary" %>
        </h3>
        <br />
        <div class="box-body">
          <div class="table-responsive">
            <div id="example_wrapper" class="dataTables_wrapper" role="grid">
             
                
           <table id="game"  class="display" >
                <thead>
                    <th>Name</th>
                    <th>Game type</th>
                    <th>Interval in sec</th>
                    <th>Total num in ticket</th>
                    <th>Num of player</th>
                    <th colspan="3"></th>
                 </thead>
                <tbody>
                  <% @games.each do |game| %>
                    <tr>
                      <td><%= game.name %></td>
                      <td><%= game.game_type %></td>
                      <td><%= game.interval_sec %></td>
                      <td><%= game.total_number_in_ticket %></td>
                      <td><%= game.num_of_player %></td>
                      <td><%= link_to 'Show', admin_game_path(game) %></td>
                      <td><%= link_to 'Edit', edit_admin_game_path(game) %></td>
                      <td><%= link_to 'Destroy', admin_game_path(game), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>

                </tbody>       
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>